{
  "openapi": "3.0.1",
  "info": {
    "title": "BON in a Box - Pipeline API",
    "contact": {
      "email": "jean-michel.lord@mcgill.ca"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://0.0.0.0:5000",
      "description": "r-script service"
    },
    {
      "url": "http://0.0.0.0:5001",
      "description": "we can add another (Python  / Julia ?) service here!"
    }
  ],
  "tags": [
    {
      "name": "placeholder",
      "description": "We could use tags"
    }
  ],
  "paths": {
    "/script/{scriptPath}": {
      "get": {
        "tags": [],
        "summary": "Run this script",
        "description": "Run this script ... decription ...",
        "operationId": "runScript",
        "parameters": [
          {
            "name": "scriptPath",
            "in": "path",
            "description": "Where to find the script in ./script folder",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Script completed"
                    },
                    "file": {
                      "type": "string",
                      "example": "map.tiff"
                    }
                  },
                  "xml": {
                    "name": "Result"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Script not found"
          }
        }
      }
    }
  }
}
